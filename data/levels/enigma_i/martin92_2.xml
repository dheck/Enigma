    <el:luamain><![CDATA[
wo["ConserveLevel"] = false

ti[" "] = {"fl_abyss"}
ti[":"] = {"fl_wood"}
ti["#"] = {"fl_wood_framed"}
ti["+"] = ti[":"] .. {"it_crack_l"}
if wo["IsDifficult"] then
    ti["-"] = ti["+"]
    ti["."] = ti[" "]
    ti["|"] = ti["+"]
else
    ti["-"] = ti["#"]
    ti["."] = ti["#"]
    ti["|"] = ti[" "]
end
ti["0"] = ti["#"] .. {"st_oxyd", flavor="a", name="left#"}
ti["1"] = ti["#"] .. {"st_oxyd", flavor="a", name="right#"}
ti["@"] = ti["#"] .. {"#ac_marble_black"}

wo(ti, " ", {
    "                    ",
    " ##..--++++++--..## ",
    " 0#---.      .---#1 ",
    " ##....++++++....## ",
    " #@....|    |....## ",
    " ##----|    |----## ",
    " 0#....      ....#1 ",
    " ##----|    |----## ",
    " ##....|    |....## ",
    " ##....++++++....## ",
    " 0#---.      .---#1 ",
    " ##..--++++++--..## ",
    "                    "})

if wo["IsDifficult"] then
    wo:shuffleOxyd({"left#*", max=0}, {"right#*", max=0})
else
    wo:shuffleOxyd()
end
 ]]></el:luamain>

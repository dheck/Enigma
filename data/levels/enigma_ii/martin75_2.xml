    <el:luamain><![CDATA[
ti[" "] = {"fl_space"}
ti["-"] = {"fl_tigris"}
ti["#"] = {"st_death"}
ti["W"] = ti["-"] .. ti["#"]
ti["S"] = ti["-"] .. {"st_switch", target="the_magnet"}
ti["m"] = ti[" "] .. {"it_magnet", "the_magnet", state=OFF}
ti["O"] = ti["-"] .. {"st_oxyd", "upper#"}
ti["o"] = ti["-"] .. {"st_oxyd", "lower#"}
ti["@"] = ti["-"] .. {"#ac_marble_black"}

wo(ti, " ", {
    "####################",
    "#        ----------#",
    "#        ------O-O-#",
    "#        ----------#",
    "#        ------O@O-#",
    "#        ----------#",
    "#      #mWWWWSWWWWW#",
    "#        ----------#",
    "#        ------o-o-#",
    "#        ----------#",
    "#        ------o-o-#",
    "#        ----------#",
    "####################"})

if wo["IsDifficult"] then
    wo:shuffleOxyd({"upper#*", max=0}, {"lower#*", max=0})
else
    wo:shuffleOxyd({"upper#*", max=1}, {"lower#*", max=1})
end
 ]]></el:luamain>
